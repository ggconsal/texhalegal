@media (max-width: 649px) {
	.img-ppal {
		height: 100%;
	}

	.texto-ppal, .texto-ppal2, .texto-ppal4, .texto-ppal4b {
		top: 20%;
	}

	.texto-ppal3 {
		top: 0%;
	}

	.div-vert {
		display: inline-block;
		visibility: visible;
	}
	.div-hori {
		visibility: hidden;
		display: none !important;
	}
}

@media (min-width: 650px) {
	.img-ppal {
		height: 100%;
	}

	.texto-ppal, .texto-ppal2 {
		top: 20%;
	}

	.texto-ppal3 {
		top: 50px;
	}

	.div-hori {
		display: inline-block;
		visibility: visible;
	}
	.div-vert {
		visibility: hidden;
		display: none !important;
	}
}

